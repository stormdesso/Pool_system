@model RestorePasswordModel

<h2>Восстановление пароля</h2>
<form method="post" asp-controller="Authorization" asp-action="Registration">
    <!-- Метод передачи данных, контроллер для обработки данных, метод для обработки данных -->

    <label asp-for="Name"></label> <!-- Название поля -->
    <input asp-for="Name" /> <!-- Поле для ввода данных -->
    <span asp-validation-for="Name"></span> <!-- Поле для вывода ошибок -->

    <label asp-for="Login"></label> <!-- Название поля -->
    <input asp-for="Login" /> <!-- Поле для ввода данных -->
    <span asp-validation-for="Login"></span> <!-- Поле для вывода ошибок -->

    <input type="submit" value="Восстановить пароль" />
    <span>@ViewData["Message"]</span> <!-- Поле для вывода ошибок -->
</form>

<a asp-controller="Authorization" asp-action="Index">Отмена</a>
